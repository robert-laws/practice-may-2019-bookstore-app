<div class="row mt-4">
  <div class="col">
    <h1>Book Genre Details</h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= link_to "<< Return to Book Genres List", book_genres_path %>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>

<div class="row mt-2">
  <div class="col">
    <h4>
      Genre Name: <%= @book_genre.all_capitalize_genre %>
    </h4>
  </div>
</div>

<div class="row mt-3">
  <div class="col">
    <h5>Books Listed for this Genre:</h5>
  </div>
</div>

<div class="row mt-2">
  <div class="col">
    <ul>
      <% Book.books_by_genre(@book_genre).each do |book| %>
        <li>
          <%= link_to book.title, book_path(book) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= link_to "Edit Book Genre", edit_book_genre_path(@book_genre) %>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= link_to "Delete Book Genre", @book_genre, method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
</div>