<div class="row mt-4">
  <div class="col">
    <h1>All Books</h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>

<div class="row">
  <div class="col">
    <ul>
      <% @books.each do |book| %>
        <li>
          <%= link_to book.title, book_path(book) %> - <%= link_to "View Book Details", author_book_path(book.author, book) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= link_to "+ Add a New Book", new_book_path %>
  </div>
</div>